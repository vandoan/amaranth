<h1> All the Cards</h1> <br>

<table>
  <thead>
    <tr class="centerTd">
      <th></th>
      <th>Caption</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cards.each do |card| %>
      <tr class="rows">
        <td><%= image_tag(card.image_url, :class => "thumb")  %></td>
        <td><%= card.caption %></td>
        <td><%= link_to 'Show', card %></td>
        <td><%= link_to 'Edit', edit_card_path(card) %></td>
        <td><%= link_to 'Destroy', card, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Card', new_card_path, :class => "btn btn-sm btn-info" %>
