<p id="notice"><%= notice %></p>


<div class="bgGrey"> 
  <div class="container cardh1">
  <h1>Deck: <%= @theme.title %></h1><br>
    <h3> &nbsp &nbsp <%= @theme.description %> </h3> <br><br>
  <br>
    <div class="masonry" style="margin-bottom:5em;">

        <% @cards = Card.all %>
          <% @cards.each do |card| %>
            <div class="boo item card">

               <% if card.title == @theme.title %>  

                  <div>
                    <div><%= link_to image_tag(card.image_url, :class => "thumb"), card_path(card.id) %>
                    </div>
                  </div>

                  <div class="edit col-md-12">
                    <div class="col-md-10 cap"><strong> <%= card.caption %></strong>
                    </div>
                    <div class="awesome col-md-2"> 
                        <li><%= link_to content_tag(:i,nil, :class=>"fa fa-cog"), edit_card_path(card) %> </li>
                        <li><%= link_to content_tag(:i,nil, :class=>"fa fa-trash-o"), card, method: :delete, data: { confirm: 'Are you sure?' } %>
                        </li>
                    </div>
                  </div>

              <% end %>
            </div>

          <% end %> 

        <%= bootstrap_form_for Card.new do |f| %>
          <div class="innerCard col-md-12 topicCard card">
            <div class="col-md-12" style="margin: 3em 0 0 0;"><center>
              <%= f.hidden_field :title,  value: "#{@theme.title}"  %>
                <%= f.file_field :image %>
                <%= f.text_field :caption, :class => "col-md-12" %>
                <br>
                  <div class="actions">
                  <%= f.submit "+", :class => " btn btn-info col-md-12", :style => "font-size:2.4em; margin:1em 0;" %></center>
                  </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
          <div class="col-md-12" style="clear:both; margin:2em;">
            <div> <%= button_to 'Back', themes_path, :style =>"color:white;", :class => "btn btn" %>
            </div>
          </div>
    </div>


